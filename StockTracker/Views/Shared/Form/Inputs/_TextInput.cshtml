@using StockTracker.Models.Shared.Form.Inputs
@model TextInputModel

<div class="form-group col-md-3 mb-3">

  <partial name="Form/Inputs/_InputLabel" model="Model.Label" />

  <input name="@Model.Name"
         type="text"
         class="form-control"
         value="@Model.Value"
         required="@Model.IsRequired.ToString().ToLower()"
         @string.Join(" ", Model.Attrs)/>

  <div class="invalid-feedback"></div>
</div>