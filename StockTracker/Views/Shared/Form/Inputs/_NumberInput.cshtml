@using StockTracker.Models.Shared.Form.Inputs
@model NumberInputModel

<input 
  name="@Model.Name"
  type="number"
  class="form-control"
  value="@Model.Value"
  required="@Model.IsRequired.ToString().ToLower()" 
  min="@Model.Min"
  max="@Model.Max"
  step="@Model.Step"
  @string.Join(" ", Model.Attrs)
/>