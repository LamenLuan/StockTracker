@using StockTracker.Models.Shared.Form

@model FormModel

<form id="@Model.Id" class="needs-validation" novalidate>

  @foreach(var input in Model.Inputs)
  {
    <partial name="Inputs/_FormInput" model="input"/>
  }

  <button id="@BTN_SUBMIT_ID"
          type="submit"
          class="btn btn-primary"
    @(Model.HasString ? "disabled" : string.Empty)>
    Save
  </button>

</form>