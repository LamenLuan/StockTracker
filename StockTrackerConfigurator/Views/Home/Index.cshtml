@model HomeModel

@{
  ViewData["Title"] = "Home Page";
  var teste = new CreationCardViewModel();
  var addCardButton = new CreationCardViewModel { AddCardButtonMode = true };
}

<div class="col-12 mb-5">
  <form id="@HomeModel.API_KEY_FORM_ID" class="needs-validation" novalidate>
    <div>
      <label for="@HomeModel.API_KEY_INPUT_ID" class="form-label">Brapi Key</label>

      <input name="brapiKey"
             type="password"
             class="form-control"
             id="@HomeModel.API_KEY_INPUT_ID"
             required />

      <div class="invalid-feedback"></div>
    </div>
  </form>
</div>

<div class="row m-0">

  <partial name="_CreationCard" model="teste" />
  <partial name="_CreationCard" model="teste" />
  <partial name="_CreationCard" model="addCardButton" />

</div>

@section Scripts{
	<partial name="_Declarings" />
	<script src="~/js/home.js"></script>
}